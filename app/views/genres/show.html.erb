<% content_for :title, "Genre #{@genre.name} - " %>

<h1><%= @genre.name %></h1>

<% if @movies.present? %>
  <div class="favorite-movies">
    <% @movies.each do |movie| %>
    <div class="movie">
      <%= link_to display_icon(movie), movie %>
      <%= movie.title %>
    </div>
    <% end %>
  </div>
<% else %>
  <p>No movies for this genre.</p>
<% end %>

<% if current_user&.admin? %>
  <section class="admin">
    <%= link_to "Edit", edit_genre_path(@genre), class: "button" %>
    <%= link_to "Delete", @genre, class: "button",
          data: { turbo_method: :delete, turbo_confirm: "Really!?" } %>
  </section>
<% end %>