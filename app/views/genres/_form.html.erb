<%= form_with(model: genre) do |f| %>
  <%= render "shared/errors", object: genre %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>

  <%= f.label :movies %>
  <div class="checkboxes">
    <%= f.collection_check_boxes(:movie_ids, Movie.all, :id, :title) %>
  </div>

  <%= f.submit %>
<% end %>